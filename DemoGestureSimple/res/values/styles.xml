<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
     <style name="Header">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="ListHeader">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>
    
     <style name="Airdata">
        <item name="android:textSize">@dimen/text_size_xsmall</item>
        <item name="android:textColor">@color/text_dim</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WindowTitleStyle" parent="@android:style/TextAppearance.WindowTitle"></style>
    
 	<!-- TextViewStyle -->
    <style name="TextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    		
	<!-- Buttons -->
	<style name="BotonDemo">
	    <item name="android:background">@drawable/boton_demo_estilo_generico</item>
	</style>
                    
    <!-- Style the ActionBar -->
    <style name="Widget.Demo.ActionBar" parent="Widget.Sherlock.ActionBar">
        <item name="background">@drawable/bg_underline</item>
        <item name="android:background">@drawable/bg_underline</item>
    </style>
    

    <!-- style the list navigation -->
	<style name="DemovoxListViewDropDown" parent="Widget.Sherlock.ListView.DropDown">
		<item name="android:listSelector">@drawable/selector_actionbar</item>
		<item name="android:text">@color/white</item>
		<item name="android:background">@color/gray_dark</item>
		<item name="background">@color/gray_dark</item>
	</style>
	        
</resources>